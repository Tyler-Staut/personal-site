---
import "../styles/global.css";

export interface Props {
  title?: string;
  description?: string;
  current?: string;
}
const { title = 'Tyler Staut', description = 'Software engineer', current = '' } = Astro.props as Props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/assets/tyler.png" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/assets/tyler.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400..800&display=swap" rel="stylesheet" />
    <link rel="icon" href="/favicon.ico" />
  </head>
  <body>
    <div class="wrap">
      <header class="site-header" data-open="false">
        <a class="brand" href="/" aria-label="Home">
          <strong>Tyler Staut</strong>
        </a>
        <button class="menu-toggle" aria-expanded="false" aria-controls="site-nav">Menu</button>
        <nav id="site-nav" aria-label="Primary">
          <a href="/projects" aria-current={current === 'projects' ? 'page' : undefined}>Projects</a>
          <a href="/about" aria-current={current === 'about' ? 'page' : undefined}>About</a>
        </nav>
      </header>

      <main>
        <slot />
      </main>

      <footer>
        <div class="muted footer-center">
          Built by Tyler Staut with ❤️ using Astro, TypeScript, and Cloudflare Workers. 
          The source code is available on <a href="https://github.com/Tyler-Staut/personal-site" target="_blank" rel="noopener noreferrer">GitHub</a>.
        </div>
      </footer>

      <style>
        .footer-center {
          text-align: center;
        }
      </style>
    </div>
  </body>
  </html>

<script is:inline>
  const header = document.querySelector('header.site-header');
  const btn = header?.querySelector('.menu-toggle');
  const nav = header?.querySelector('#site-nav');
  const mq = window.matchMedia('(max-width: 640px)');
  function closeMenu() {
    header?.setAttribute('data-open', 'false');
    btn?.setAttribute('aria-expanded', 'false');
  }
  btn?.addEventListener('click', () => {
    const open = header?.getAttribute('data-open') === 'true';
    header?.setAttribute('data-open', String(!open));
    btn?.setAttribute('aria-expanded', String(!open));
  });
  nav?.addEventListener('click', (e) => {
    const target = e.target;
    if (target && target.tagName === 'A' && mq.matches) closeMenu();
  });
  window.addEventListener('resize', () => {
    if (!mq.matches) closeMenu();
  });
  window.addEventListener('keydown', (e) => { if (e.key === 'Escape') closeMenu(); });
</script>
