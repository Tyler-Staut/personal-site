---
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';

export interface Props {
  title: string;
}

const { title } = Astro.props;

// Disable the table of contents so posts don't render a right-hand sidebar.
const frontmatter = { title, tableOfContents: false };
---
<StarlightPage frontmatter={frontmatter} hasSidebar={false}>
  <p class="rss-subscribe">
    <a href="/rss.xml" target="_blank" rel="noopener noreferrer">
      <img
        src="https://cdn.jsdelivr.net/npm/simple-icons@latest/icons/rss.svg"
        alt="RSS"
        width="16"
        height="16"
      />
      Subscribe via RSS
    </a>
  </p>
  <slot />
</StarlightPage>

<style>
  .rss-subscribe {
    text-align: right;
    margin-bottom: 1rem;
  }

  .rss-subscribe a {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    text-decoration: none;
  }
</style>
