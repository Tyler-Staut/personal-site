---
import BentoBox from '../components/BentoBox.astro';
---
<div class="bento-grid">
  <BentoBox title="About Me" description="Learn more about me and my background." link="/about" image="/favicon.svg" />
  <BentoBox title="Labs" description="Explore my projects and experiments." link="/labs" />
  <BentoBox title="Contact" description="Get in touch with me." link="/contact" />
  <!-- Add more boxes as needed -->
</div>

<style>
.bento-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 2rem;
  margin: 2rem 0;
}
</style>
